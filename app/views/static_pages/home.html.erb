<% provide(:title, "Home") %>

<div class="jumbotron">
<h1>Request A Song Now</h1>
</div>


<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <% if user_signed_in? %>
  Logged in as <strong><%= current_user.email %></strong>.
  <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
